<p id="notice"><%= notice %></p>

<div class="col-xs-3"></div>

<div class="col-xs-6">
  <div class="top">
    <h2>Top Questions</h2>
  </div>
  <hr>
  <%= link_to 'Add Question', new_question_path, class:'btn btn-info ques' %>

  <table >
    <tbody>
      <% @questions.each do |question| %>
        
        <tr>
          <td><%= link_to 'Show', question %></td>
          <td><%= link_to 'Edit', edit_question_path(question) %></td>
          <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        

          <td><h3><%= link_to  question.title, question, class: 'bg-light text-primary' %><h3></td>
          
          
        </tr>
        
      <% end %>
    </tbody>
  </table>
  
</div>

<br>

<div class="vp"></div>
<div class="col-xs-2"></div>
</div> 
