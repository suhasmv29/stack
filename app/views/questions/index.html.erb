<p id="notice"><%= notice %></p>

<div class="col-xs-3"></div>

<div class="col-xs-6">
    <div class="top">
        <h2>Top Questions</h2>
    </div>
    <hr>
    <%if user_signed_in?%>
      <%= link_to 'Ask Question', new_question_path, class:'btn btn-info ques' %>
    <%end%>
    <table class="tables">
        <tbody>
            <% @questions.each do |question| %>
                <tr class="tr1">
                    <td class="td1">
                        <button class="btn bg-transparent">
                            <h4><%= link_to Answer.where('question_id = :question_id', { question_id: question.id }).count, question%><br>
                            <%= link_to "Answer", question%>
                            </h4>
                            
                        </button>
                    </td>
                    <td class="td1">
                        <h3><%= link_to  question.title, question, class: 'bg-white text-primary' %> <h3>
                    </td>
                    <%if question.user.present?%>
                    <td class="td1"><%=question.user.email%></td>
                    <td class="td1"><%=question.user.created_at.strftime("%e-%b-%Y")%></td>
                    <%end%>
                </tr>

            <% end %>
        </tbody>
    </table>
</div>

<br>

<div class="vp"></div>
<div class="col-xs-2"></div>