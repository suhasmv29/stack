
<div class="col-xs-3"></div>
<div class="col-xs-1"></div>
<div class="col-xs-6">
  <div class="title">

    <p>

      <h2><%= @question.title %></h2>
      <hr>
    </p>
    <div class="title-body">
      <p>
        <h5><%= @question.body %></h5>
      </p>
    
    <p>
      <strong>Answered:</strong>
      <%= @question.answered %>
    </p>
    
  </div>

  <%if user_signed_in?%>
    <% if current_user.id == @question.user_id%>
      <%= link_to 'Edit', edit_question_path(@question), class:'btn btn-outline-light' %> 
      <%= link_to 'Back', questions_path ,class: 'btn btn-outline-light'%><br>
    <%end%>
  <%end%>
  <%= render  "answers/index" %>
</div>

<div class="col-xs-2"></div>

