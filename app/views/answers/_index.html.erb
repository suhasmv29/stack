<p id="notice"><%= notice %></p>

<h3>Answers</h3>

<table class="tables-ans">
  <thead>
    <tr>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @answers.each do |answer| %>
      <tr class="tr-ans">
        <div>
          
          <td><h4><%= answer.body %></h4></td>
          
          <%if User.find(answer.user_id).present?%>
            
            <td><small>by <%= User.find(answer.user_id).email %></td>
          <%end%>
        </div>
        
      </tr>
      <tr class="tr-ans1">
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if user_signed_in?%>
  <%= link_to  "Answer", new_answer_path, class:"btn btn-primary text-white",type:"button" %>
<%end%>
