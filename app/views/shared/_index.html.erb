<p id="notice"><%= notice %></p>
<h2><b>

Answers</b></h2>

<table class="tables-ans">
    <thead>
        <tr>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>

        <% @question.answers.each do |answer| %>
          <tr class="tr-ans">
              <div>
                  <td class="ans-body">  
                        <h4><%= answer.body %></h4>
                  </td>

                  <%if answer.user.present?%>
                    <td><%= link_to 'Edit', edit_answer_path(answer), class:'btn btn-outline-light' %></td>
                    <td><%= link_to 'Delete', answer, method: :delete, data: {confirm: "Are you sure"} ,class: 'btn btn-outline-light'%><br></td>
                    <td><small>by <%= answer.user.email %>&emsp;</td>
                    <td><small> at <%= answer.user.created_at.strftime("%e-%b-%Y") %></td>


                  <%end%>
              </div>
          </tr>
          <tr class="tr-ans1"></tr>
        <% end %>
    </tbody>
</table>

<br>
<%if user_signed_in?%>
  <%= link_to  "Answer", new_answer_path, class:"btn btn-primary text-white",type:"button" %>
<%end%>